{
  "title": "dapplerc data model", 
  "type": "object",
  "properties": {
    "environments": {
      "title": "global environment specifications",
      "type": "object",
      "default": {
        "default": {
          "ethereum": "internal"
        },
        "evm": "default"
      },
      "patternProperties": {
        "^((?!evm)\\w)+$": {
          "type": "object",
          "title": "environment specification",
          "properties": {
            "ethereum": {
              "oneOf": [
                {
                  "title": "internal evm",
                  "type": "string",
                  "pattern": "^internal$",
                  "description": "if set to internal, dapple will use its build in evm to simulate the chain"
                },
                {
                  "title": "HttpProvider",
                  "type": "object",
                  "properties": {
                    "host": {
                      "tittle": "host",
                      "type": "string"
                    },
                    "port": {
                      "title": "port",
                      "type": "string"
                    }
                  },
                  "required": ["host","port"],
                  "additionalProperties": false
                }
              ]
            },
            "ipfs": {}
          },
          "required": ["ethereum"],
          "additionalProperties": false
        }
      },
      "properties": {
        "evm": {
          "type": "string",
          "default": "default"
        }
      }
    }
  },
  "additionalProperties": false,
  "required": [ "environments" ]
}
