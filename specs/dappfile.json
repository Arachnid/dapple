{
  "title": "dappfile definition",
  "description": "dappfile definition",
  "type": "object",
  "required": [ "name", "layout", "version" ],
  "additionalProperties": false,
  "properties": {
    "name": {
      "$ref": "#/definitions/name"
    },
    
    "version": {
      "$ref": "#/definitions/version",
      "default": "1.0.0"
    },
    
    "summery": {
      "$ref": "#/definitions/summery",
      "default": ""
    },
    
    "tags": {
      "$ref": "#/definitions/tags",
      "default": []
    },

    "layout": {
      "title": "Directory Structure",
      "description": "Specifies where relevant files are located",
      "type": "object",
      "required": [ "sol_sources", "build_dir" ],
      "additionalProperties": false,
      "properties": {
        "sol_sources": {
          "title": "sol sources",
          "description": "Root directory of the solidity source files.",
          "type": "string",
          "default": "contracts"
        },
        "build_dir": {
          "title": "Build Directory",
          "description": "Directory, where all the build files should be stored.",
          "type": "string",
          "default": "build"
        }
      }
    },

    "dependencies": {
      "$ref": "#/definitions/dependencies",
      "default": {}
    },

    "ignore": {
      "title": "Ignore",
      "description": "Ignore files and directories",
      "type": "array",
      "items": {
        "title": "Name of file/directory",
        "type": "string"
      },
      "default": []
    },

    "environments": {
      "$ref": "#/definitions/environments",
      "default": {}
    }
    
  },
  
  "definitions": {
    "dependencies": {
      "title": "Dependencies",
      "description": "Direct dependency list",
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^.*$": {
          "title": "Path",
          "description": "Dependency path.",
          "type": "string"
        }
      }
    },
    
    "environments": {
      "title": "Environments",
      "description": "Local environments options",
      "additionalProperties": false,
      "patternProperties": {
        "^\\w+$": {
          "title": "named environment specification",
          "$ref": "definitions#/definitions/environmentSpec"
        }
      }
    }
  },

  "tags": {
    "type": "array",
    "title": "Tags",
    "items": {
      "type": "string"
    }
  },
  
  "summery": {
    "title": "Description",
    "description": "Short summery of the package",
    "type": "string",
    "pattern": "^.{0,80}$"
  },

  "name": {
    "title": "Package Name",
    "description": "Used for creating its dapple_packages directory",
    "type": "string"
  },

  "version": {
    "type": "string",
    "title": "semver",
    "pattern": "^\\d+\\.\\d+.\\d+$"
  }
  
}
